<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuxin.wx.commodity.mapper.CommoditySpecialMapper">
	<resultMap type="com.yuxin.wx.model.commodity.CommoditySpecial" id="commoditySpecialMap">
		<result property="id" column="id" />
		<result property="title" column="title" />
		<result property="label" column="label" />
		<result property="coverPicUrl" column="cover_picUrl" />
		<result property="descript" column="descript" />
		<result property="detailTitle" column="detail_title" />
		<result property="detailCoverPicUrl" column="detail_cover_pic_url" />
		<result property="detailText" column="detail_text" />
		<result property="teacherIds" column="teacher_ids" />
		<result property="commodityIds" column="commodity_ids" />
		<result property="createTime" column="create_time" />
		<result property="orderFlag" column="order_flag" />
		<result property="status" column="status" />
		<result property="updateTime" column="update_time" />
	</resultMap>
	
	<insert id="insert" parameterType="com.yuxin.wx.model.commodity.CommoditySpecial" useGeneratedKeys="true" keyProperty="id">
	   insert into commodity_special(title,label,cover_pic_url,descript,detail_title,detail_cover_pic_url,detail_text,teacher_ids,commodity_ids,create_time,order_flag,status,update_time)
	   values(#{title},#{label},#{coverPicUrl},#{descript},#{detailTitle},#{detailCoverPicUrl},#{detailText},#{teacherIds},#{commodityIds},#{createTime},#{orderFlag},#{status},#{updateTime})
	</insert>

    <select id="findSpecialByPage" parameterType="com.yuxin.wx.model.commodity.CommoditySpecial" resultMap="commoditySpecialMap">
        select 
        id,title,label from commodity_special order by status desc, update_time desc limit #{firstIndex},#{pageSize}
    </select>

    <select id="findSpecialByPageCount"  resultType="int">
        select 
        count(id) from commodity_special order by status desc, update_time desc 
    </select>

    <select id="findSpecialById" parameterType="com.yuxin.wx.model.commodity.CommoditySpecial" resultMap="commoditySpecialMap">
        select 
        id,
        title,label,cover_pic_url,descript,detail_title,detail_cover_pic_url,detail_text,teacher_ids,commodity_ids,create_time,order_flag,status,update_time from commodity_special where id = #{id}
    </select>
    
    
   
</mapper>